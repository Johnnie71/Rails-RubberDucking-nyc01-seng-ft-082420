<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p> <%= error %> </p>
    <% end %>
<% end %>

<%= form_for @duck do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>

    <%= f.label :description %><br>
    <%= f.text_area :description %>

    <%= f.submit %>

    <% end %>